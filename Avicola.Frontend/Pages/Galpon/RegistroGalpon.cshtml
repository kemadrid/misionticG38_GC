@page
@model Avicola.FrontEnd.Pages.RegistroGalponModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-left">
    <h4 class="display-4">Registro Galpones</h4>
</div>

<div class="container bg-light">
<form class="mt-2" method="POST">
    <div class="form-group row ">
        <label for="nombreGalpon" class="col-sm-2 col-form-label">Nombre Galpon</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="nombreGalpon" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="ubicacion" class="col-sm-2 col-form-label">Ubicaci√≥n</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="ubicacion" placeholder="Location">
        </div>
    </div>
    <div class="form-group row">
        <label for="cantAnimales" class="col-sm-2 col-form-label">Cantidad de Animales</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="cantAnimales" placeholder="amount">
        </div>
    </div>
    <div class="form-group row">
        <label for="fechaIngreso" class="col-sm-2 col-form-label">Fecha Ingreso</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="fechaIngreso" placeholder="Date">
        </div>
    </div>
    <div class="form-group row">
        <label for="fechaSalida" class="col-sm-2 col-form-label">Fecha Salida</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="fechaSalida" placeholder="Date">
        </div>
    </div>
  <div class="form-group row">
    <label for="latitud" class="col-sm-2 col-form-label">Latitud</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="latitud" placeholder="Latitude">
    </div>
  </div>
  <div class="form-group row">
    <label for="longitud" class="col-sm-2 col-form-label">Longitud</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="longitud" placeholder="Length">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>
</form>
</div>
