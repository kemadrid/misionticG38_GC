@page
@model Avicola.Frontend.Pages.NuevoUsuarioModel
@using Avicola.Dominio;

@{
}

<div align="center">
    <H3>DILIGENCIA LA INFORMACION DEL NUEVO USUARIO</H3>
    
<form method="post">

  <div class="form-group">
    <input class="form-control" placeholder="" asp-for="nuevaPer.Id" type="hidden">
  </div> 
  <div class="form-group">
    <label  class="form-label" >Identificacion</label>
    <input class="form-control" placeholder="Ingrese la identificacion" asp-for="nuevaPer.Cedula">
    <span class="text-danger" asp-validation-for="nuevaPer.Cedula"></span>
  </div>
  <div class="form-group">
    <label  class="form-label" >Nombre</label>
    <input class="form-control" placeholder="Ingrese el nombre" asp-for="nuevaPer.Nombre">
    <span class="text-danger" asp-validation-for="nuevaPer.Nombre"></span>
  </div>
  <div class="form-group">
    <label  class="form-label" >Apellido</label>
    <input class="form-control" placeholder="Ingrese el apellido" asp-for="nuevaPer.Apellido">
    <span class="text-danger" asp-validation-for="nuevaPer.Apellido"></span>
  </div>
  <div class="form-group">
    <label  class="form-label" >Email</label>
    <input class="form-control" placeholder="Ingrese el email" asp-for="nuevaPer.Email">
    <span class="text-danger" asp-validation-for="nuevaPer.Email"></span>
  </div>
  <div class="form-group">
    <label  class="form-label" >Telefono</label>
    <input class="form-control" placeholder="Ingrese el telefono" asp-for="nuevaPer.Telefono">
    <span class="text-danger" asp-validation-for="nuevaPer.Telefono"></span>
  </div>
  <div class="form-group">
    <label  class="form-label" >Tipo Usuario</label>
    
    <select asp-for="nuevaPer.tipo" asp-items="Html.GetEnumSelectList<tipoUsuario>()" class="form-control">
    </select>
  </div>
  
  
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>



</div>