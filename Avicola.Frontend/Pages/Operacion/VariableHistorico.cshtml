@page
@model Avicola.Frontend.Pages.VariableHistoricoModel
@{
}

<div align="center">
    <H5>Diligenciar Variables</H5>

</div>

<div class="container bg-light">
    <form class="mt-2" method="POST">
        <input type="hidden" asp-for="id_historico"></input>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Variable</label>
            <div class="col-sm-10">
                <select asp-for="idVar_selected" class="form-control">
                    <option label="Seleccione una variable" value="-1"></option>
                    @foreach (var item in Model.variables_opciones)
                    {
                        <option label="@item.Nombre" value="@item.Id"></option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Valor</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="objeto.valor_string">
                <span class="text-danger" asp-validation-for="objeto.valor_string"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
</div>